{
  "name": "Android Dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteEnv": {
    "ANDROID_SDK_ROOT": "/opt/android-sdk",
    "PATH": "/opt/android-sdk/platform-tools:/opt/android-sdk/cmdline-tools/latest/bin:${PATH}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "fwcd.kotlin",
        "vscjava.vscode-java-pack"
      ]
    }
  }
}
